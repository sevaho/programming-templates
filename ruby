require 'optparse'
require 'ostruct'

# -----------------------------------------------------------------------------------------------------------------------------
# VARIABLES
# -----------------------------------------------------------------------------------------------------------------------------

@CONSTANT = 5

# -----------------------------------------------------------------------------------------------------------------------------
# CLASSES
# -----------------------------------------------------------------------------------------------------------------------------

class Main

    @@arg1

    def initialize

        @@arg1 = "test" 

    end

    def print

        puts "arg1: #@@arg1"

    end

end

# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS
# -----------------------------------------------------------------------------------------------------------------------------

def check_args

    options = OpenStruct.new

    OptionParser.new do |opt| # automatic usage

        opt.on('-a', '--arg1 ARGUMENT1', 'The_first_argument') { |o| options[:arg1] = o }

    end.parse!

    if options.arg1 != nil

        @arg = options.arg1
        puts "arg1: #@arg"

    end

end

# -----------------------------------------------------------------------------------------------------------------------------
# MAIN
# -----------------------------------------------------------------------------------------------------------------------------

def main

    check_args

end

main
