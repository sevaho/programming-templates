package main

import (

    "fmt"
    "flag"

)

// -----------------------------------------------------------------------------------------------------------------------------
// CONSTANTS
// -----------------------------------------------------------------------------------------------------------------------------

// -----------------------------------------------------------------------------------------------------------------------------
// FUNCTIONS
// -----------------------------------------------------------------------------------------------------------------------------

// -----------------------------------------------------------------------------------------------------------------------------
// MAIN
// -----------------------------------------------------------------------------------------------------------------------------

func main () {

    arg1 := flag.String("arg1", "default value", "an argument") // auto usage

    flag.Parse()

    fmt.Println("arg1: ", *arg1)

}
