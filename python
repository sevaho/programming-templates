import sys
import getopt

# -----------------------------------------------------------------------------------------------------------------------------
# VARIABLES
# -----------------------------------------------------------------------------------------------------------------------------

CONSTANT_A = 100

# -----------------------------------------------------------------------------------------------------------------------------
# CLASSES
# -----------------------------------------------------------------------------------------------------------------------------


class Main(object):

    arg1 = ''

    def __init__ (self):

        print("arg: %s" % (self.arg1))

# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS
# -----------------------------------------------------------------------------------------------------------------------------


def check_args (argv):

    try:

        opts, args = getopt.getopt(argv, "ha:", ["arg1="])

    except getopt.GetoptError:

        usage()

    for opt, arg in opts:

        if opt == '-h':
            usage()
        elif opt in ("-a", "--arg1"):
            print(arg)


def usage ():

    print("%s usage: " % sys.argv[0])

    sys.exit(1)

# -----------------------------------------------------------------------------------------------------------------------------
# MAIN
# -----------------------------------------------------------------------------------------------------------------------------


def main (argv):

    check_args(argv)


if __name__ == "__main__":

    main(sys.argv[1:])
