use strict;
use warnings;
use Getopt::Long;

# -----------------------------------------------------------------------------------------------------------------------------
# GLOBAL VARIABLES
# -----------------------------------------------------------------------------------------------------------------------------

my $arg;

# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS
# -----------------------------------------------------------------------------------------------------------------------------

sub check_args {

    GetOptions(
        
        "help|h" => \&usage,
        "a=s"    => \$arg

    );

    if ($arg) {
    
        printf "Argument: %s\n", $arg;

    }

}

sub usage {

    printf "Usage: %s [OPTIONS]... [ARGS]... \
            \n  description\
            \nOPTIONS:\
            \n  -h, *       display the help and exit\
            \nEXAMPLES:\
            \nNOTE:\
            \n", "script.pl";

    exit 0;

}

# -----------------------------------------------------------------------------------------------------------------------------
# MAIN
# -----------------------------------------------------------------------------------------------------------------------------

sub main {

    check_args()

}

main()
